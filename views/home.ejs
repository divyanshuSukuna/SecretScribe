<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SecretScribe</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen p-10">

        <!-- Login and Create Account Buttons -->
        <div class="flex justify-end space-x-4 mb-10">
            <a href="/login" class="px-4 py-2 bg-blue-500 text-white rounded-md">Login</a>
            <a href="/register" class="px-4 py-2 bg-green-500 text-white rounded-md">Create Account</a>
        </div>

        <!-- Posts Section -->
        <div class="posts">
            <h1 class="text-3xl mb-6 font-bold">Posts</h1>
            
            <% if (posts && posts.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% posts.reverse().forEach(function(post) { %>
                        <div class="post flex flex-col p-4 bg-zinc-800 border-2 mb-2 rounded-md border-zinc-700">
                            <p class="text-lg tracking-tight flex-grow">
                                <%= post.content %>
                            </p>
                            <div class="mt-2">
                                <div class="btn text-sm flex gap-3">
                                    <h4 class="text-blue-500 text-md">@anonymous</h4>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-gray-400">No posts available.</p>
            <% } %>
        </div>
        
    </div>
</body>
</html>
